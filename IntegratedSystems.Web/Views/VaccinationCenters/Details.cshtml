@using IntegratedSystems.Domain.Domain_Models
@model IntegratedSystems.Domain.Domain_Models.VaccinationCenter

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>VaccinationCenter</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MaxCapacity)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MaxCapacity)
        </dd>
    </dl>
</div>

<div>
    <a class="btn btn-success w-100" asp-action="AddVaccine" asp-route-id="@Model?.Id">Add Vaccined Patient</a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Date Taken
            </th>
            <th>
                Center
            </th>
            <th>
                Certificate
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewData["Vaccines"] as IList<Vaccine>)
        {
			<tr>
				<td>
					@item.PatientFor?.FirstName
				</td>
				<td>
					@item.PatientFor?.LastName
				</td>
				<td>
					@item.DateTaken
				</td>
                <td>
                    @Model.Name
                </td>
                <td>
                    @item.Certificate
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
	<a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
	<a asp-action="Index">Back to List</a>
</div>
